{{to-elsewhere named="tabs" send=(hash tabs=tabs) }}
{{to-elsewhere named="tabs-content" send=(hash tabs=tabs) }}


<dialog-line-container class="layout-row flex">
  <div class="flex-70">
    {{textarea cols=40
               value=(mut model.message)
             }}
  </div>
  <div class="layout-column flex-30">
    <div class="flex">
      {{#if model.listData}}
        {{#paper-list}}
          {{#paper-subheader}}Used Variables{{/paper-subheader}}

          {{#each listData as |item|}}
            {{#paper-item class="md-3-line"}}
              <img src={{item.img}} alt={{item.name}} class="md-avatar">
              <div class="md-list-item-text">
                <h3>{{item.name}}</h3>
                <h4>{{item.email}}</h4>
                <p>Some longer notes here could be here. But they aren't.</p>
              </div>
            {{/paper-item}}
          {{/each}}
        {{/paper-list}}
      {{else}}
        <h1>No Variables</h1>
        <p>
          This dialog line currently does not use variables. Variables
          adds variation to your dialogs and makes them more interesting.
          In case you don't know how to use variables see this Tutorial.
        </p>
      {{/if}}

    </div>
  </div>
</dialog-line-container>
