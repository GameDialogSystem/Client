
<flow-input-container>
    {{#each model.inputs as |input|}}
      {{flow-input
          scrollOffsetX=scrollOffsetX
          scrollOffsetY=scrollOffsetY
          parent=model
          model=input
          acceptRerouting=(action "acceptRerouting")
          cancelReroute=(action "cancelReroute")}}
    {{/each}}
</flow-input-container>

<div>
<flow-content>
  <div class="actor">
    {{paper-icon "person" size=48}}
  </div>
  <div class="message">
    
    {{textarea autoresize=true
               cols=40
               rows=displayedRows
               max-rows=10
               value=(mut model.message)
             }}


    {{!--
    {{#paper-list}}

      {{#each model.outputs as |answer|}}
        {{#paper-item as |controls|}}
          {{textarea autoresize=true cols=40 rows=displayedRows max-rows=10 value=(mut answer.response)}}
        {{/paper-item}}
      {{/each}}
    {{/paper-list}}
    --}}
  </div>
</flow-content>
</div>

<flow-output-container>
  {{#each model.outputs as |output|}}
    {{flow-output
        scrollOffsetX=scrollOffsetX
        scrollOffsetY=scrollOffsetY
        parent=(mut model)
        model=output
        reroute=reroute
        connectToNewBlock=(action "connectToNewBlock")}}
  {{/each}}
</flow-output-container>


{{!--
{{#paper-card as |card|}}
  {{#unless isStartingLine}}
  <div class="gs-connection-container">
    <div class="gs-answer-circle"><div></div></div>
  </div>
  {{/unless}}

  {{#card.content}}
    <p>
      {{model.message}}
    </p>
  {{/card.content}}
  <!--
  {{textarea value=(mut model.message) cols="80" rows="6"}}
-->
  {{#paper-list}}
    {{#each model.answers as |answer|}}
      {{#paper-item as |controls|}}
        <p>{{answer.response}}</p>

        <div class="md-secondary-container">
          {{#controls.button secondary=true iconButton=true onClick=(action "changeAnswer" answer)}}
            {{paper-icon "edit"}}
          {{/controls.button}}
          {{#controls.button secondary=true iconButton=true onClick=(action "deleteAnswer" answer)}}
            {{paper-icon "delete"}}
          {{/controls.button}}
        </div>

      {{/paper-item}}
    {{/each}}
  {{/paper-list}}
{{/paper-card}}

<div class="gs-answer-container">
  {{#each model.answers as |answer|}}
    {{dialog-connector-endpoint connectionReroute=(action 'onConnectionReroute' x y)}}
  {{/each}}
</div>
--}}
