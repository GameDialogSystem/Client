<flow-input-container>
    {{#each model.inputs as |input|}}
      {{flow-input
          scrollOffsetX=scrollOffsetX
          scrollOffsetY=scrollOffsetY
          parent=model
          model=input
          acceptRerouting=(action "acceptRerouting")
          cancelReroute=(action "cancelReroute")}}
    {{/each}}
</flow-input-container>

<div>
<flow-content>
<!--
  <div class="actor">
    {{paper-icon "person" size=48}}
  </div>
-->
  <div class="message">
    {{textarea autoresize=true
               cols=40
               rows=displayedRows
               max-rows=10
               value=(mut model.message)
   }}
  </div>
</flow-content>
</div>

<flow-output-container>
  {{#each model.outputs as |output|}}
    {{flow-output
        scrollOffsetX=scrollOffsetX
        scrollOffsetY=scrollOffsetY
        parent=(mut model)
        model=output
        reroute=reroute
        connectToNewBlock=(action "connectToNewBlock")}}
  {{/each}}
</flow-output-container>
