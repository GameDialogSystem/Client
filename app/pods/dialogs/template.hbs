{{#paper-appbar title="Hoppelhase" as |appbar|}}
  {{appbar.tab label="Start" value="start"}}
  {{#appbar.tabContent value="start"}}
    {{#paper-toolbar-tools}}
      {{! Dialog loading and saving actions}}
      {{#paper-appbar-tab-content-group label="Persistance"}}
        {{paper-appbar-button icon="folder" tooltip="Load Dialog" onClick=(action "loadDialogFile")}}
        {{paper-appbar-button icon="save" tooltip="Save Dialog"}}
      {{/paper-appbar-tab-content-group}}

      {{! Load dialog button}}
      {{#paper-appbar-tab-content-group label="Changes"}}
        {{paper-appbar-button icon="undo" tooltip="Undo Changes"}}
        {{paper-appbar-button icon="redo" tooltip="Redo Changes"}}
      {{/paper-appbar-tab-content-group}}
      {{#paper-appbar-tab-content-group label="Team"}}
        {{paper-appbar-button icon="notifications" tooltip="Enable Notification"}}
        {{paper-appbar-button icon="group" tooltip="Get Involved Team Members"}}
        {{paper-appbar-button icon="group_add" tooltip="Add Team Members"}}
      {{/paper-appbar-tab-content-group}}
      {{#paper-appbar-tab-content-group label="Layout"}}
        {{paper-appbar-button icon="transform" tooltip="Auto Layout" onClick=(action "relayout")}}
      {{/paper-appbar-tab-content-group}}
    {{/paper-toolbar-tools}}
  {{/appbar.tabContent}}

  {{appbar.tab label="Dialog Line" value="line"}}
  {{#appbar.tabContent value="line"}}
    {{#paper-toolbar-tools}}
      {{! Dialog loading and saving actions}}
      {{#paper-appbar-tab-content-group label="Foo"}}
        {{paper-appbar-button icon="folder" tooltip="Load Dialog" onClick=(action "loadDialogFile")}}
        {{paper-appbar-button icon="save" tooltip="Save Dialog"}}
      {{/paper-appbar-tab-content-group}}
    {{/paper-toolbar-tools}}
  {{/appbar.tabContent}}

  {{#appbar.additional}}
    {{#paper-menu position="target-right target" as |menu|}}
      {{#menu.trigger}}
        {{#paper-button iconButton=true}}
          {{paper-icon "person_outline" size=24}}
        {{/paper-button}}
      {{/menu.trigger}}

      {{#menu.content width=4 as |content|}}
        {{#content.menu-item}}
          {{paper-icon "settings"}}
          <span>Properties</span>
        {{/content.menu-item}}
        {{#content.menu-item}}
          {{paper-icon "style"}}
          <span>Appearance</span>
        {{/content.menu-item}}
        {{paper-divider}}

        {{#content.menu-item}}
          {{paper-icon "power_settings_new"}}
          <span>Logout</span>
        {{/content.menu-item}}
      {{/menu.content}}
    {{/paper-menu}}
  {{/appbar.additional}}

{{/paper-appbar}}

<div class="gs-side-container">
    {{outlet}}
</div>

{{#if showLoadingDialog}}
  {{file-dialog host=host onCloseDialog=(action "closeDialog") onFileSelect=(action "onFileSelect")}}
{{/if}}
