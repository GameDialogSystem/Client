{{!--

###################################################################################################################

  --}}




<div class="line-container">

  <div class="side-toolbar">
    {{#paper-toolbar}}
      {{#paper-toolbar-tools}}
        {{#paper-button iconButton=true onClick="returnToOverview" }}
          {{paper-icon "navigate_before"}}
        {{/paper-button}}
        <h2>
        Dialogs
      </h2>
        <span class="flex"></span>
        {{#paper-button iconButton=true}}
          {{paper-icon "favorite"}}
        {{/paper-button}}
        {{#paper-button iconButton=true}}
          {{paper-icon "more_vert"}}
        {{/paper-button}}
        {{#paper-button raised=true primary=true}}
          Save Changes
        {{/paper-button}}
      {{/paper-toolbar-tools}}
    {{/paper-toolbar}}
  </div>

  <div class="side-meta-toolbar">
    {{#paper-toolbar}}
      {{#paper-toolbar-tools}}
        <h2>
        Information
      </h2>
      {{/paper-toolbar-tools}}
    {{/paper-toolbar}}
  </div>

  <div class="side-content">

    {{#paper-list}}
      {{#each model as |dialog|}}
        {{#link-to 'dialogs.index.edit' dialog}}
          {{#paper-item class="md-3-line md-long-text" as |controls|}}

            <img src="https://i.pinimg.com/favicons/752f4d52fef0b2c6f4c7a433f3f7b0a4ec60aa95d344120ae28c2510.png?d7bf100265daf50edc8810b67b9649e2" alt= {{item.name}} class="md-avatar">
            <div class="md-list-item-text">
              <h3>{{dialog.name}}</h3>
              <p>
                {{dialog.description}}
              </p>
            </div>
            <div class="md-secondary-container">
              {{#controls.button secondary=true iconButton=true}}
                {{paper-icon "edit"}}
              {{/controls.button}}
              {{#controls.button secondary=true iconButton=true}}
                {{paper-icon "delete"}}
              {{/controls.button}}
            </div>

          {{/paper-item}}
        {{/link-to}}
        {{paper-divider}}
      {{/each}}
      {{#if showNewLineDialog}}
        {{#paper-item class="md-3-line md-long-text" as |controls|}}

          {{paper-icon "create" class="md-avatar-icon"}}
          <div class="md-list-item-text">
            {{paper-input
              label="New Dialog Name"
              value=newDialogName
              customValidations=dialogNameValidations
              onChange=(action (mut newDialogName))
              required=true
            }}
          </div>
          <div class="md-secondary-container">
            {{#paper-button onClick=(action "createNewDialog")}}{{paper-icon "done"}}Create Dialog{{/paper-button}}
          </div>
          {{paper-divider}}
        {{/paper-item}}
      {{/if}}
    {{/paper-list}}

    {{#paper-button raised=true fab=true iconButton=true primary=true onClick=(toggle "showNewLineDialog" this)}}
      {{paper-icon "add"}}
    {{/paper-button}}
  </div>

  {{outlet}}

</div>
